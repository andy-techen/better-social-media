{
  "name": "Better Social Media",
  "description": "Filtering out negativity on social media",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting", "https://twitter.com/"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/icon-16.png",
      "48": "/images/icon-48.png",
      "128": "/images/icon-128.png"
    }
  },
  "options_page": "options.html"
}
