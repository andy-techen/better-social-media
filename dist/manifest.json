{
  "name": "Better Social Media",
  "description": "Filtering out negativity on social media",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting", "declarativeContent"],
  "host_permissions": ["https://twitter.com/*", "https://better-social-media.herokuapp.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "/images/icon-16.png",
      "32": "/images/icon-32.png",
      "48": "/images/icon-48.png",
      "128": "/images/icon-128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "/images/icon-16.png",
    "32": "/images/icon-32.png",
    "48": "/images/icon-48.png",
    "128": "/images/icon-128.png"
  }
}
